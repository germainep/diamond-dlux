@import globals
.card
  width: 90%
  margin: 1rem;
  padding: 1rem;
  text-align: center;
  color: inherit;
  text-decoration: none;
  border: 1px solid rgba(lighten(primary-color, 60), 70);
  border-radius: 10px;
  transition: color 0.15s ease, border-color 0.15s ease;
  box-shadow $shadows

  .imageContainer
    width: 270px
    margin: 0 auto
    z-index 1000

  .textBox
    height: 20%
    padding .5rem 0
    font-size $h5

    h3
      margin .25rem 0
      text-align center


    p
      margin: 0
      line-height: 1.5
      text-align left

    .button
      &:hover,
      &:focus,
      &:active
        color primary-color
        border-color accent-color
.price
  font-family "quicksand", sans-serif
  color secondary-color
  font-weight bold
  font-size $h2
  height 75px
  margin-top 0

.center
  text-align center
  font-size $h4
  margin-bottom 0
