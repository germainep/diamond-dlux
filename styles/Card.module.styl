@import globals
.card
  width: 90%
  margin: 1em;
  padding: 1em;
  text-align: center;
  color: inherit;
  text-decoration: none;
  border: 1px solid rgba(lighten(primary-color, 60), 70);
  border-radius: 10px;
  transition: color 0.15s ease, border-color 0.15s ease;
  box-shadow .25rem .75rem 1rem rgba(#ccc, 70)

  .imageContainer
    width: 270px
    margin: 0 auto

  .textBox
    height: 20%
    padding .5em 0

    h3
      margin .25rem 0
      font-size 1.5rem
      text-align center


    p
      margin: 0
      font-size: 1.25rem
      line-height: 1.5
      text-align left

    .button
      &:hover,
      &:focus,
      &:active
        color primary-color
        border-color accent-color

