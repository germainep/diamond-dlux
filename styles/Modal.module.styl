.modaloverlay
  background-color #99999
  height 100vh
  left 0
  opacity .5
  position fixed
  top 0
  width 100vw
  z-index 500

.modalwrapper
  display flex
  justify-content center
  left 0
  outline 0
  overflow-x hidden
  overflow-y auto
  position fixed
  top 25%
  width 100%
  z-index 1000

.modal
  align-items center
  background-color #fff
  border-radius .25rem
  display flex
  flex-direction column
  margin 1.875rem
  max-width 500px
  position relative
  z-index 100

